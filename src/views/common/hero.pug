mixin hero(modHero)
  section.hero
    .container.hero__container
      header.header
        .header__left
          +socials('header__socials')
        .header__right
          a(href = '#').hamburger-menu
            .hamburger-menu__bars
      .hero__content
        .hero__user
          if modHero == 'blog-hero'
            include ../common/blog-user
          else
            include ../common/user
        .hero__title
          +icon('portfolio_header', 'hero__title-svg')
      .arrow-down
        a.arrow-down__link(href = '#')
          +icon('arrow_down', 'arrow-down__svg')